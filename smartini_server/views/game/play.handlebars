<script>
    let my_counter = 0;
    let max_questions = "{{ maxQuestions }}";

    function increaseCounter() {
        my_counter++;
        if (my_counter >= max_questions) {
            window.location.hash = "#answers";
        } else {
            window.location.hash = "#" + my_counter;
        }
    }
</script>

<p class = "ready centered">Are you ready to play?</p>

